<config>
	<modules>
		<Luigifab_Modules>
			<version>2.0.0</version>
		</Luigifab_Modules>
	</modules>
	<global>
		<blocks>
			<modules>
				<class>Luigifab_Modules_Block</class>
			</modules>
		</blocks>
		<helpers>
			<modules>
				<class>Luigifab_Modules_Helper</class>
			</modules>
		</helpers>
		<models>
			<modules>
				<class>Luigifab_Modules_Model</class>
			</modules>
		</models>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<modules>
					<file>luigifab/modules.xml</file>
				</modules>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Modules>
					<files>
						<default>Luigifab_Modules.csv</default>
					</files>
				</Luigifab_Modules>
			</modules>
		</translate>
	</adminhtml>
</config>